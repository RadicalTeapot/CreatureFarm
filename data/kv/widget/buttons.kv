#:kivy 1.10.0

<IconButton@Button>:
    source: ''

    RelativeLayout:
        pos: root.pos
        size: root.size
        Image:
            id: image
            source: root.source
            size_hint: (1., 1.)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<TopBarIconButton@ToggleButton>:
    group: 'speed_control'
    size_hint: (None, 1.0)
    background_color: 0., 0., 0., 0.
    width: 32

    source: ''

    RelativeLayout:
        pos: root.pos
        size: root.size
        Image:
            id: image
            source: root.source
            size_hint: (1., 1.)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            color: (1., 1., 1., 1.) if root.state == 'normal' else (1., 1., 1., 0.33)

<TopBarButton@Button>:
    size_hint: (None, 1.0)
    width: 100
