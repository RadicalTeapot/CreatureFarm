#:kivy 1.10.0

<CurrentMission>:
    spinner: spinner
    description: label
    canvas:
        Color:
            rgb: 1., 1., 1.
        Rectangle:
            size: (self.width - 10., self.height - 10.)
            pos: (5., 5.)

    BoxLayout:
        size: root.size
        pos: root.pos

        spacing: 10
        padding: 10
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1., None)
            height: 30

            Label:
                text: 'Select mission'
                size_hint: (None, 1.)
                text_size: self.size
                halign: 'left'
                valign: 'center'
                color: 0., 0., 0., 1.

            Widget:
                size_hint: (.2, 1.)

            Spinner:
                id: spinner
                size_hint: (1., 1.)

        ScrollView:
            size_hint: (1., 1.)
            do_scroll_x: False

            Label:
                id: label
                size_hint: (1., None)
                text_size: (self.parent.width, None)
                size: self.texture_size
                text: 'Placeholder description'
                color: 0., 0., 0., 1.
                halign: 'justify'
                valign: 'top'
